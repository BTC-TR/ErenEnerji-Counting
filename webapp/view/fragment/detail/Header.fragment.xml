<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<l:Grid defaultSpan="XL6 L6 M6 S12">
		<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanM="4" labelSpanS="4" emptySpanXL="0" columnsXL="2"
			singleContainerFullSize="false">
			<Label width="auto" id="_IDGenLabel11" text="{i18n>warehouseLocationInputTitle}"/>
			<Input id="idWH" showValueHelp="true" valueHelpRequest="onValueHelpLgpla" value="{viewModel>/Lgpla}">
				<layoutData>
					<l:GridData span="XL4 L4 M4 S6"/>
				</layoutData>
				<suggestionItems>
					<core:Item text="{viewModel>Lgpla}"/>
				</suggestionItems>
			</Input>
			<Label width="auto" text="{i18n>scanBarcodeInputTitle}"/>
			<Input id="idBarcode" value="{viewModel>/Barcode}" submit="onChangeBarcode">
				<layoutData>
					<l:GridData span="XL8 L8 M8 S8"/>
				</layoutData>
			</Input>
			<Label width="auto" text="{i18n>Matnr}"/>
			<Text text="{viewModel>/BarcodeForm/Matnr} {viewModel>/BarcodeForm/Maktx}">
				<layoutData>
					<l:GridData span="XL4 L4 M4 S6"/>
				</layoutData>
			</Text>
			<Label width="auto" text="{i18n>Charg}"/>
			<Text id="idCharg" text="{viewModel>/BarcodeForm/Charg}">
				<layoutData>
					<l:GridData span="XL4 L4 M4 S6"/>
				</layoutData>
			</Text>
			<Label  width="auto" text="{i18n>Owners}" required="true"/>
			<Select id="idOwners" items="{viewModel>/Owners}" selectedKey="{viewModel>/Owner}" change="onChangeOwner">
				<core:Item key="{viewModel>Owner}" text="{viewModel>OwnerText}"/>
				<layoutData>
					<l:GridData id="_IDGenGridData1351" span="XL8 L8 M8 S8"/>
				</layoutData>
			</Select>
		
			<Label width="auto" required="true" text="{i18n>Quantity}"/>
			<Input id="idQuan" submit="onPressQuantity" value="{viewModel>/Quantity}">
				<layoutData>
					<l:GridData span="XL4 L4 M4 S6"/>
				</layoutData>
			</Input>
			<Text text="{viewModel>/BarcodeForm/Meins}"></Text>
				<Label width="auto" id="_IDGenLabel3" text="{i18n>InOut}" required="false"/>
			<Switch  change="onChangeSwitchInOut" id="idSwitchInOut" state="true"  customTextOn="{viewModel>/In}" customTextOff="{viewModel>/Out}">
				<layoutData>
					<FlexItemData id="_IDGenFlexItemData1" growFactor="1"/>
				</layoutData>
			</Switch>
		</f:SimpleForm>
	</l:Grid>
</core:FragmentDefinition>